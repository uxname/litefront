{
  "name": "litefront",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "____________________BUILD AND RUN______________________________________": "",
    "build": "npx run-p check build:vite",
    "build:vite": "vite build",
    "start:dev": "vite",
    "start:prod": "vite preview",
    "____________________TESTING___________________________________________": "",
    "test:dev": "vitest",
    "test:prod": "vitest run",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:prod": "playwright test",
    "test:e2e:show-trace": "playwright show-trace",
    "____________________STORYBOOK__________________________________________": "",
    "storybook:serve": "ladle serve",
    "storybook:build": "ladle build --outDir storybook-build",
    "storybook:preview": "ladle preview",
    "____________________CODEGEN____________________________________________": "",
    "gen": "graphql-codegen --require dotenv/config --config codegen.yml",
    "test:e2e:record": "npx playwright codegen",
    "extract-translations": "npx i18next \"src/**/*.{tsx,ts}\" -c i18next-parser.config.ts",
    "____________________LINTING AND FORMATTING_____________________________": "",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "lint:style:fix": "npm run lint:style -- --fix",
    "ts:check": "tsc --noEmit",
    "check": "npx run-p lint:style ts:check lint",
    "____________________OTHER______________________________________________": "",
    "postinstall": "npm run prepare",
    "prepare": "npx lefthook install",
    "update": "npx ncu -u && npx rimraf node_modules package-lock.json && npm i --legacy-peer-deps && npm audit fix && npm run check",
    "postupdate": "npm run lint:fix && npm run check"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@ladle/react": "^5.0.3",
    "@tanstack/react-router": "^1.125.6",
    "@tanstack/router-devtools": "^1.125.6",
    "antd": "^5.26.4",
    "dotenv": "^17.2.0",
    "graphql": "^16.11.0",
    "i18next": "^25.3.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-i18next": "^15.6.0",
    "react-icons": "^5.5.0",
    "urql": "^4.2.2",
    "yup": "^1.6.1",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "5.0.7",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "4.1.6",
    "@graphql-codegen/typescript-operations": "4.6.1",
    "@graphql-codegen/typescript-urql": "^4.0.1",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/router-vite-plugin": "^1.125.6",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "i18next-parser": "^9.3.0",
    "lefthook": "^1.12.1",
    "npm-check-updates": "^18.0.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.89.2",
    "sharp": "^0.34.3",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-scss": "^6.12.1",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-image-optimizer": "^2.0.2",
    "vite-plugin-version-mark": "^0.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
