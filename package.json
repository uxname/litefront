{
  "name": "litefront",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "____________________BUILD AND RUN______________________________________": "",
    "build": "npx run-p check build:vite",
    "build:vite": "vite build",
    "start:dev": "vite",
    "start:prod": "vite preview",
    "____________________TESTING___________________________________________": "",
    "test:dev": "vitest",
    "test:prod": "vitest run",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:prod": "playwright test",
    "test:e2e:show-trace": "playwright show-trace",
    "____________________STORYBOOK__________________________________________": "",
    "storybook:serve": "ladle serve",
    "storybook:build": "ladle build --outDir storybook-build",
    "storybook:preview": "ladle preview",
    "____________________CODEGEN____________________________________________": "",
    "gen": "graphql-codegen --require dotenv/config --config codegen.yml",
    "test:e2e:record": "npx playwright codegen",
    "____________________LINTING AND FORMATTING_____________________________": "",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:fix:unsafe": "biome check --write --unsafe",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "lint:style:fix": "npm run lint:style -- --fix",
    "ts:check": "tsc --noEmit",
    "check": "npx run-p lint:style ts:check lint knip",
    "knip": "knip --production",
    "____________________OTHER______________________________________________": "",
    "postinstall": "npm run prepare",
    "prepare": "npx lefthook install",
    "update": "npx ncu -u && npx rimraf node_modules package-lock.json && npm i --legacy-peer-deps && npm audit fix && npm run check",
    "postupdate": "npm run lint:fix && npm run check"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.136.3",
    "@tanstack/router-devtools": "^1.136.3",
    "oidc-client-ts": "^3.4.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-oidc-context": "^3.3.0",
    "urql": "^5.0.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@graphql-codegen/cli": "6.0.2",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript": "5.0.4",
    "@graphql-codegen/typescript-operations": "5.0.4",
    "@graphql-codegen/typescript-urql": "^4.0.1",
    "@inlang/paraglide-js": "2.5.0",
    "@ladle/react": "^5.1.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/router-plugin": "^1.136.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "daisyui": "^5.5.4",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "knip": "^5.69.1",
    "lefthook": "^2.0.4",
    "npm-check-updates": "^19.1.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.0",
    "sass": "^1.94.0",
    "sharp": "^0.34.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-scss": "^6.12.1",
    "svgo": "^4.0.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-image-optimizer": "^2.0.3",
    "vite-plugin-version-mark": "^0.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.9"
  }
}
