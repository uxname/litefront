{
  "name": "litefront",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "____________________BUILD AND RUN______________________________________": "",
    "build": "npx run-p check build:vite",
    "build:vite": "vite build",
    "start:dev": "vite",
    "start:prod": "vite preview",
    "____________________TESTING___________________________________________": "",
    "test:dev": "vitest",
    "test:prod": "vitest run",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:prod": "playwright test",
    "test:e2e:show-trace": "playwright show-trace",
    "____________________STORYBOOK__________________________________________": "",
    "storybook:serve": "ladle serve",
    "storybook:build": "ladle build --outDir storybook-build",
    "storybook:preview": "ladle preview",
    "____________________CODEGEN____________________________________________": "",
    "gen": "graphql-codegen --require dotenv/config --config codegen.yml",
    "test:e2e:record": "npx playwright codegen",
    "extract-translations": "npx i18next 'src/**/*.{tsx,ts}' -c i18next-parser.config.ts",
    "____________________LINTING AND FORMATTING_____________________________": "",
    "lint": "npx eslint '**/*.{js,ts,jsx,tsx,cjs,cts,mjs,mts}'",
    "lint:fix": "npm run lint -- --fix",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "lint:style:fix": "npm run lint:style -- --fix",
    "ts:check": "tsc --noEmit",
    "check": "npx run-p lint:style ts:check lint",
    "____________________OTHER______________________________________________": "",
    "update": "npx ncu -u && npx rimraf node_modules package-lock.json && npm i --legacy-peer-deps && npm audit fix && npm run check",
    "prepare": "husky",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.1",
    "@ladle/react": "^4.1.2",
    "@tanstack/react-router": "^1.87.7",
    "@tanstack/router-devtools": "^1.87.7",
    "antd": "^5.22.4",
    "dotenv": "^16.4.7",
    "graphql": "^16.9.0",
    "i18next": "^24.1.0",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-http-backend": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.0",
    "react-i18next": "^15.1.4",
    "react-icons": "^5.4.0",
    "urql": "^4.2.1",
    "yup": "^1.5.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "4.1.2",
    "@graphql-codegen/typescript-operations": "4.4.0",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@jetbrains/eslint-config": "^6.0.4",
    "@playwright/test": "^1.49.1",
    "@tanstack/router-vite-plugin": "^1.87.7",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-comments": "^1.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-secrets": "^2.1.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "i18next-parser": "^9.0.2",
    "npm-check-updates": "^17.1.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "sass": "^1.82.0",
    "sharp": "^0.33.5",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "svgo": "^3.3.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-plugin-version-mark": "^0.1.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
