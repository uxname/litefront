{
  "name": "litefront",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "____________________BUILD AND RUN______________________________________": "",
    "build": "npm run check && tsc && vite build",
    "start:dev": "vite",
    "start:prod": "vite preview",
    "____________________TESTING___________________________________________": "",
    "test:dev": "vitest",
    "test:prod": "vitest run",
    "test:e2e:dev": "playwright test --ui",
    "test:e2e:prod": "playwright test",
    "test:e2e:show-trace": "playwright show-trace",
    "____________________CODEGEN____________________________________________": "",
    "gen": "graphql-codegen --require dotenv/config --config codegen.yml",
    "test:e2e:record": "npx playwright codegen",
    "extract-translations": "npx i18next 'src/**/*.{tsx,ts}' -c i18next-parser.config.ts",
    "____________________LINTING AND FORMATTING_____________________________": "",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "lint:style": "stylelint \"**/*.{css,scss}\"",
    "lint:style:fix": "npm run lint:style -- --fix",
    "lint:staged": "lint-staged",
    "ts:check": "tsc --noEmit",
    "check": "npm run lint:style && npm run ts:check && npm run lint",
    "____________________OTHER______________________________________________": "",
    "update": "npx ncu -u && npx rimraf node_modules package-lock.json && npm i --legacy-peer-deps && npm audit fix && npm run check",
    "prepare": "husky",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@tanstack/react-router": "^1.47.1",
    "@tanstack/router-devtools": "^1.47.1",
    "dotenv": "^16.4.5",
    "graphql": "^16.9.0",
    "i18next": "^23.12.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.5.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-i18next": "^15.0.1",
    "urql": "^4.1.0",
    "yup": "^1.4.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.3",
    "@graphql-codegen/cli": "5.0.2",
    "@graphql-codegen/schema-ast": "^4.1.0",
    "@graphql-codegen/typescript": "4.0.9",
    "@graphql-codegen/typescript-operations": "4.2.3",
    "@graphql-codegen/typescript-urql": "^4.0.0",
    "@jetbrains/eslint-config": "^5.4.2",
    "@playwright/test": "^1.46.0",
    "@tanstack/router-vite-plugin": "^1.47.0",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-comments": "^1.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-no-secrets": "^1.0.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^0.25.1",
    "eslint-plugin-unicorn": "^55.0.0",
    "husky": "^9.1.4",
    "i18next-parser": "^9.0.2",
    "lint-staged": "^15.2.8",
    "npm-check-updates": "^17.0.6",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "sharp": "^0.33.4",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.1",
    "svgo": "^3.3.2",
    "typescript": "^5.5.4",
    "vite": "^5.4.0",
    "vite-plugin-image-optimizer": "^1.1.8",
    "vite-plugin-version-mark": "^0.1.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "npm run check",
    "*.{css,scss}": "npm run lint:style:fix",
    "*.{json,md,html,xml,yml,yaml,mdx}": "prettier --write"
  }
}
